<MainScreen>:
  BoxLayout:
    orientation:'vertical'
    MDToolbar:
      title: 'Portfolio App'
      left_action_items: [ [ '', lambda x: None ] ]
      md_bg_color: .2, .2, .2, 1
    MDSpinner:
      id: spinner
      size_hint: None, None
      size: dp(46), dp(46)
      pos_hint: { 'center_x': .5, 'center_y': .5 }
      active: True if app.processing else False
    FloatLayout:
#      MDTextField:
#        id: input
#        hint_text: 'Document Password'
#        helper_text_mode: "on_error"
#        max_text_length: 10
#        min_text_length: 10
#        size_hint: None,None
#        size: 300,50
#        pos: 200,400
#        on_text: app.on_text()
      MDRectangleFlatIconButton:
        id: file_chooser
        text: "Chose Transaction File"
        icon: "folder"
        size_hint: None,None
        size_hint: 0.5, 0.1
        pos_hint: {'center_x': 0.4,'center_y':0.8}
        md_bg_color: .7,.7,.7, 1
        on_release: app.file_manager_open()

      MDFillRoundFlatButton:
        text: 'Calculate'
        size_hint: None,None
        size_hint: 0.4,0.1
        pos_hint: {'center_x': 0.4,'center_y':0.6}
        elevation: 10
        on_release: app.process_file()

      MDTextButton:
        text: 'View NAV'
        on_press: app.go_nav()
        pos_hint: { 'center_x': .9, 'center_y': .95}

      MDIconButton:
        icon: 'help'
        on_press: app.help()
        pos_hint: { 'center_x': .7, 'center_y': .8 }


